{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/browser",
    "paths": {
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": ["es6", "dom", "es2017.object"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*", "coverage/**/*", "node_modules/**/*"]
}
